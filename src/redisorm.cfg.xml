<?xml version='1.0' encoding='utf-8'?>
<!--<!DOCTYPE redisorm-configuration SYSTEM "http://redisorm.org/dtd/redisorm-configure.dtd">-->
<redisorm-configuration>
    <session-factory>
        <properties>
            <!--设置数据库的连接url-->
            <property name="host">localhost</property>
            <!--设置数据库的端口号-->
            <property name="port">6379</property>
            <!--连接数据库的用户名-->
            <property name="username">root</property>
            <!--连接数据库是密码-->
            <property name="password">iShare2018</property>
            <!--数据库连接池的大小-->
            <property name="pool_size">20</property>
            <!--超时时间-->
            <property name="timeout">1000</property>
        </properties>
        <mappings>
            <mapping-xml resource="TestXML.rbm.xml"/>
            <mapping-annotation class="TestAnnotation"/>
        </mappings>
    </session-factory>
</redisorm-configuration>